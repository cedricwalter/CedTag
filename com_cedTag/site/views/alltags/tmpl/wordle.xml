<?xml version="1.0" encoding="utf-8"?>
<metadata>
    <layout title="Wordle" option="wordle">

        <message>
            <![CDATA[TAGS DEFAULT LAYOUT DESC]]>
        </message>
    </layout>

    <!-- Add fields to the parameters object for the layout. -->
    <fields name="params">
        <fieldset name="basic" label="JGLOBAL_CATEGORY_OPTIONS">
            <field name="wordleCount" type="text" size="5" default="9999" label="Count"
                   description="Title for the page."/>

            <field name="wordleWidth" type="text" size="5" default="600" label="Width in px"
                   description="Width for the page."/>

            <field name="wordleHeight" type="text" size="5" default="600" label="Height in px"
                   description="Height for the page."/>

            <field name="wordlePalette" type="text" size="40" default="CC6600,FFFBD0,FF9900,C13100" label="Palette"
                   description="Html colors separated by comma"/>

            <field name="wordleTitle" type="text" size="12" default="All tags" label="Title"
                   description="Title for the page."/>

            <field name="wordleMetaDescription" type="textarea" rows="5" cols="30" default="tag clouds"
                   label="Meta Description" description="Customize meta description."/>

            <field name="wordleMetaKeywords" type="textarea" rows="5" cols="30" default="tag clouds" label="Meta Keywords"
                   description="Customize meta keywords."/>

            <field name="wordleReverse" type="list" default="random" label="Reverse"
                   description="Reverse order that the tags will be displayed in.">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>

            <!--
            <field name="wordleTagOrder" type="list" default="random" label="Order"
                   description="Order that the tags will be displayed in.">
                <option value="random">Random</option>
                <option value="date">Oldest first</option>
                <option value="rdate">Most recent first</option>
                <option value="alpha">Term Alphabetical</option>
                <option value="ralpha">Term Reverse-Alphabetical</option>
                <option value="hits">Most Hits</option>
                <option value="rhits">Least Hits</option>
            </field> -->
        </fieldset>

    </fields>
</metadata>
