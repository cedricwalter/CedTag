<?xml version="1.0" encoding="utf-8"?>
<extension
        type="module"
        version="2.5"
        client="site"
        method="upgrade">
    <name>Latest Tags</name>
    <author>JoomlaTags.org</author>
    <creationDate>March 2009</creationDate>
    <copyright>Copyright (C)2009 joomlatags.org. All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <authorEmail>joomlatags@gmail.com</authorEmail>
    <authorUrl>www.joomlatags.org</authorUrl>
    <version>1.9</version>
    <description>Latest Tags Module will show the latest tags.</description>
    <files>
        <filename module="mod_latestTags">mod_latestTags.php</filename>
        <filename>helper.php</filename>
        <filename>index.html</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="moduleclass_sfx" type="text" default="" label="Module Class Suffix"
                       description="PARAMMODULECLASSSUFFIX"/>
                <field name="count" type="text" default="25" label="Count"
                       description="The number of tags to display (default is 25)"/>
                <field
                        name="sorting"
                        type="list"
                        default="1"
                        label="Tag Sorting"
                        description="COM_MODULES_FIELD_CACHING_DESC">
                    <option value="tag_alphasort">Aphabetical</option>
                    <option value="sizeasort">By size</option>
                </field>

                <field
                        name="reverse"
                        type="radio"
                        default="0"
                        label="Reverse"
                        description="Reverse Result">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

            </fieldset>

            <fieldset
                    name="advanced">
                <field
                        name="layout"
                        type="modulelayout"
                        label="Style"
                        description="JFIELD_ALT_MODULE_LAYOUT_DESC"/>
                <field
                        name="moduleclass_sfx"
                        type="text"
                        label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                        description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"/>
                <field
                        name="cache"
                        type="list"
                        default="1"
                        label="COM_MODULES_FIELD_CACHING_LABEL"
                        description="COM_MODULES_FIELD_CACHING_DESC">
                    <option
                            value="1">JGLOBAL_USE_GLOBAL
                    </option>
                    <option
                            value="0">COM_MODULES_FIELD_VALUE_NOCACHING
                    </option>
                </field>
                <field
                        name="cache_time"
                        type="text"
                        default="900"
                        label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
                        description="COM_MODULES_FIELD_CACHE_TIME_DESC"/>
                <field
                        name="cachemode"
                        type="hidden"
                        default="static">
                    <option
                            value="static"></option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
