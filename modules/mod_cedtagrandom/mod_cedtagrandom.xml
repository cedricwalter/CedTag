<?xml version="1.0" encoding="utf-8"?>
<extension
        type="module"
        version="2.5"
        client="site"
        method="upgrade">
    <name>CedTag Random Tags Cloud</name>
    <element>mod_cedtagrandom</element>
    <author>Cedric Walter</author>
    <creationDate>April 2012</creationDate>
    <copyright>Copyright (C)2012 waltercedric.com. All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-3.0.html GNU/GPL</license>
    <authorEmail>cedric.walter@gmail.com</authorEmail>
    <authorUrl>www.waltercedric.com</authorUrl>
    <version>2.6.0</version>
    <description>MOD_CEDRANDOMTAGS_XML_DESCRIPTION</description>

    <languages>
   		<language tag="en-GB">en-GB.mod_cedtagrandom.ini</language>
   		<language tag="en-GB">en-GB.mod_cedtagrandom.sys.ini</language>
   	</languages>

    <files>
        <filename module="mod_cedtagrandom">mod_cedtagrandom.php</filename>
        <filename>helper.php</filename>
        <filename>index.html</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
    </files>

    <config>
        <fields name="params">
            <fieldset name="basic">

                <field name="count" type="text" default="25" label="MOD_CEDRANDOMTAGS_COUNT"
                       description="MOD_CEDRANDOMTAGS_COUNT_DESC"/>
                <field
                        name="sorting"
                        type="list"
                        default="tag_latestasort"
                        label="MOD_CEDRANDOMTAGS_SORTING_LABEL"
                        description="MOD_CEDRANDOMTAGS_SORTING_DESC">
                    <option value="tag_latestasort">MOD_CEDRANDOMTAGS_SORTING_VALUE0</option>
                    <option value="tag_alphasort">MOD_CEDRANDOMTAGS_SORTING_VALUE1</option>
                    <option value="sizeasort">MOD_CEDRANDOMTAGS_SORTING_VALUE2</option>
                </field>

                <field
                        name="reverse"
                        type="radio"
                        default="0"
                        label="MOD_CEDRANDOMTAGS_REVERSE_LABEL"
                        description="MOD_CEDRANDOMTAGS_REVERSE_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

            </fieldset>

            <fieldset
                    name="advanced">
                <field
                        name="layout"
                        type="modulelayout"
                        label="Style"
                        description="JFIELD_ALT_MODULE_LAYOUT_DESC"/>
                <field
                        name="moduleclass_sfx"
                        type="text"
                        label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                        description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"/>
                <field
                        name="cache"
                        type="list"
                        default="1"
                        label="COM_MODULES_FIELD_CACHING_LABEL"
                        description="COM_MODULES_FIELD_CACHING_DESC">
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>
                <field
                        name="cache_time"
                        type="text"
                        default="900"
                        label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
                        description="COM_MODULES_FIELD_CACHE_TIME_DESC"/>
                <field
                        name="cachemode"
                        type="hidden"
                        default="static">
                    <option
                            value="static"></option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
