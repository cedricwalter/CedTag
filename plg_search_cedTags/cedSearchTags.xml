<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="search" method="upgrade">
    <name>Search - Ced Tags</name>
    <element>plg_search_cedTags</element>
	<author>Cedric Walter</author>
    <creationDate>April 2012</creationDate>
    <copyright></copyright>
    <license>http://www.gnu.org/licenses/gpl-3.0.html GNU/GPL</license>
    <authorEmail>cedric.walter@gmail.com</authorEmail>
    <authorUrl>www.waltercedric.com</authorUrl>
    <version>2.5.1</version>
    <description>Allows Searching of tags information</description>

    <files>
        <filename plugin="cedSearchTags">cedSearchTags.php</filename>
        <filename>index.html</filename>
    </files>


    <!-- Extension Update Specification -->
    <!-- Note: No spaces or linebreaks allowed between the server tags -->
    <updateservers>
        <server type="extension" priority="1" name="Extension Update Site">http://updates.waltercedric.com/update/modules/plg_search_cedTags/extension.xml</server>
        <server type="collection" priority="2" name="Collection Update Site">http://updates.waltercedric.com/update.xml</server>
    </updateservers>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="search_limit" type="text" size="5" default="50" label="Search Limit"
                       description="Number of Search items to return"/>
            </fieldset>
        </fields>
    </config>

</extension>
